{
  "manifest_version": 2,
  "name": "Careerswarm - Career Intelligence",
  "version": "1.0.0",
  "description": "Analyze any job posting and see your career trajectory match instantly",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.monster.com/*",
    "https://*.careerbuilder.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.workday.com/*",
    "https://*.icims.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/jobs/*",
        "https://*.indeed.com/viewjob*",
        "https://*.glassdoor.com/job-listing/*",
        "https://*.ziprecruiter.com/c/*",
        "https://*.monster.com/job-openings/*",
        "https://*.careerbuilder.com/job/*",
        "https://*.greenhouse.io/*/jobs/*",
        "https://*.lever.co/*/jobs/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
