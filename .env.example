# CareerSwarm Environment Variables
# Copy this file to .env and fill in your actual values

# ================================================================
# DATABASE
# ================================================================
DATABASE_URL="mysql://user:password@host:port/database"

# ================================================================
# AUTHENTICATION
# ================================================================
JWT_SECRET="your-jwt-secret-here-min-32-chars"
OAUTH_SERVER_URL="https://your-manus-oauth-server.com"
OWNER_OPEN_ID="your-owner-open-id"

# ================================================================
# MANUS FORGE (AI/LLM Integration)
# ================================================================
BUILT_IN_FORGE_API_URL="https://forge.manus.ai"
BUILT_IN_FORGE_API_KEY="your-forge-api-key-here"

# ================================================================
# STRIPE (Payment Processing)
# ================================================================
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PRICE_ID="price_your_price_id"

# ================================================================
# APP CONFIGURATION
# ================================================================
VITE_APP_ID="careerswarm"
# OAuth "Sign in" link â€” Manus OAuth portal base URL (e.g. https://oauth.manus.im)
VITE_OAUTH_PORTAL_URL="https://oauth.manus.im"
NODE_ENV="development"
PORT="3000"

# ================================================================
# S3 STORAGE (Optional - for file uploads)
# ================================================================
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-bucket-name"

# ================================================================
# DEV LOGIN (bypass OAuth)
# ================================================================
# Set ENABLE_DEV_LOGIN=true to allow /api/auth/test-login in production
# (e.g. for preview URLs where Manus OAuth cookies fail).
# Dev login is auto-enabled when NODE_ENV !== "production".
# ENABLE_DEV_LOGIN="false"

# ================================================================
# E2E TESTING (Playwright / CI)
# ================================================================
# Optional: set these to run E2E tests that require a real login.
# If unset, tests use auth bypass (mock JWT) and do not hit real OAuth.
# TEST_USER_EMAIL="test@example.com"
# TEST_USER_PASSWORD="your-test-password"

# ================================================================
# ANALYTICS (Optional - Umami)
# ================================================================
# VITE_ANALYTICS_ENDPOINT="https://your-umami-instance.com"
# VITE_ANALYTICS_WEBSITE_ID="your-website-id"
