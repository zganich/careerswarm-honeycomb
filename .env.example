# CareerSwarm Environment Variables
# Copy this file to .env and fill in your actual values

# ================================================================
# DATABASE
# ================================================================
DATABASE_URL="mysql://user:password@host:port/database"

# ================================================================
# AUTHENTICATION (email-only sign-in at /login; no OAuth required)
# ================================================================
JWT_SECRET="your-jwt-secret-here-min-32-chars"
# Optional: set if you use an OAuth provider. When unset, auth is email-only.
# OAUTH_SERVER_URL="https://your-oauth-server.com"
# OWNER_OPEN_ID="optional-owner-id"

# ================================================================
# AI/LLM (Resume Roast, Tailor, Scribe use only OPENAI)
# ================================================================
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Optional: Forge API for storage/voice/maps (not used for LLM)
# BUILT_IN_FORGE_API_URL="https://your-forge-api.com"
# BUILT_IN_FORGE_API_KEY="your-forge-api-key"

# ================================================================
# STRIPE (Payment Processing)
# ================================================================
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PRO_PRICE_ID="price_your_pro_price_id"

# ================================================================
# APP CONFIGURATION
# ================================================================
VITE_APP_ID="careerswarm"
# Optional: OAuth portal URL. When unset, Sign In uses email-only /login.
# VITE_OAUTH_PORTAL_URL="https://oauth.example.com"
NODE_ENV="development"
PORT="3000"

# ================================================================
# S3 STORAGE (Optional - for file uploads)
# ================================================================
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-bucket-name"

# ================================================================
# EMAIL SIGN-IN (primary auth when OAuth not used)
# ================================================================
# When OAUTH_SERVER_URL is unset (default), email sign-in at /login is always enabled.
# When OAUTH_SERVER_URL is set, email sign-in is enabled in non-production, or in
# production only if you set ENABLE_DEV_LOGIN=true (e.g. to allow email alongside OAuth).
# ENABLE_DEV_LOGIN="true"

# ================================================================
# E2E TESTING (Playwright / CI)
# ================================================================
# Optional: set these to run E2E tests that require a real login.
# If unset, tests use auth bypass (mock JWT) and do not hit real OAuth.
# TEST_USER_EMAIL="test@example.com"
# TEST_USER_PASSWORD="your-test-password"

# ================================================================
# CLOUDFLARE (DNS + monitoring)
# ================================================================
# For DNS API (docs/CLOUDFLARE_DNS.md) and pnpm run monitor / pnpm run test:cloudflare
# CLOUDFLARE_API_TOKEN="your-api-token"
# CLOUDFLARE_ZONE_ID="your-zone-id"

# ================================================================
# ANALYTICS (Optional - Umami)
# ================================================================
# VITE_ANALYTICS_ENDPOINT="https://your-umami-instance.com"
# VITE_ANALYTICS_WEBSITE_ID="your-website-id"
